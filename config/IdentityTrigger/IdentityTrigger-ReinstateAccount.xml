<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE IdentityTrigger PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<IdentityTrigger handler="sailpoint.api.WorkflowTriggerHandler" name="ReInstate Account" type="Rule">
  <Description>This will use when first phase leave trigger then assign the user</Description>
  <Owner>
    <Reference class="sailpoint.object.Identity" name="spadmin"/>
  </Owner>
  <HandlerParameters>
    <Attributes>
      <Map>
        <entry key="businessProcess"/>
        <entry key="identityProcessingThreshold"/>
        <entry key="identityProcessingThresholdType"/>
        <entry key="workflow" value="NS_Workflow_ReInstate"/>
      </Map>
    </Attributes>
  </HandlerParameters>
  <TriggerRule>
    <Reference class="sailpoint.object.Rule" name="NS_Rule_Identity_Trigger_ReInstate"/>
  </TriggerRule>
</IdentityTrigger>